    "version": "0.2.0",
    "configurations": [
        {
            "name": "server",
            "type": "debugpy",
            "request": "launch",
            "module": "IPython",
            "console": "integratedTerminal",
            "args": [
                "-i",
                "examples/states-server/server.py",
                "--matplotlib"
            ],
            "preLaunchTask": "build server",
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "gui",
            "cargo": {
                "args": [
                    "build",
                    "-p",
                    "gui",
                ]
            },
        },
    ]
}